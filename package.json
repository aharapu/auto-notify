{
  "name": "auto-notify",
  "version": "1.0.0",
  "description": "A simple notification app that reminds you to stretch every 5 minutes",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/pg": "^8.11.11",
    "cron-parser": "^5.0.6",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "electron": "^35.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.autonotify.app",
    "productName": "Auto Notify",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "src/assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "signingHashAlgorithms": null,
      "signAndEditExecutable": false,
      "icon": "src/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "identity": null,
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icon.ico"
    }
  }
}
